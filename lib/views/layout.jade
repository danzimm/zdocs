doctype html
html
    head
        title #{doccenter} - #{pagetitle}
        if stylesheet
            link(rel='stylesheet', type="text/css", href=stylesheet)
    body
        header.mainheader
            a(href="/")
                h1 #{doccenter}
        header.subheader
            block topleftbar
            h1 #{pagetitle}
        article.container(style=hideSidebar ? 'left:0' : '')
            block content
            footer
                p Running on node with Express, Jade and Stylus
        nav.sidebar(style=hideSidebar ? 'width:0' : '')
            block sidebar
