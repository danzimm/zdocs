@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Quicksand')
global-reset()

sub-color = #C7C7C7
main-color = #50A186
sb-color = #D9DEDB
sb-width = 228px

body
  font-family 'Georgia'

.mainheader
  z-index 5
  position fixed
  top 0
  left 0
  right 0
  min-width 550px
  font-family 'Quicksand'
  padding 7.5px 7.5px
  color #fff
  font-size 13px
  text-align left
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.subheader
  z-index 4
  position fixed
  top 26px
  left 0
  right 0
  min-width 550px
  font 100% 'Lucida Grande','Lucida Sans Unicode',Helvetica,Arial,Verdana,sans-serif
  padding 0.4em 0.4em
  background-color sub-color
  border-bottom 1px solid darken(sub-color, 30%)
  text-align center
  color #000
  
  .toc
    text-align left
    position fixed
    left 0
    font-size 11px
    margin-top 3px
    margin-left 10px
 
  h1
    float none
 
.container
  z-index 2
  margin 30px auto
  position absolute
  top 57px
  left sb-width
  bottom 0
  right 0
  padding-left 2em
  padding-right 2em
  font 100% 'Lucida Grande','Lucida Sans Unicode',Helvetica,Arial,Verdana,sans-serif
  font-size: 13px

  ul
    margin-left 7px

  .categorysubheader
    font-size 145%
    font-weight 400
    margin-bottom 0.5em
    margin-top 1em

  .categoryheader
    font-size 135%
    color #468C75
    margin-bottom 1em
    margin-top 1em

  #pagetitle
    font-size 200%
    margin-bottom 1em

.sidebar
  z-index 2
  font-size 1em
  position fixed
  font 115% 'Lucida Grande','Lucida Sans Unicode',Helvetica,Arial,Verdana,sans-serif
  left 0
  bottom 0
  top 57px
  width sb-width 
  background-color sb-color
  border-right 1px solid darken(sb-color, 30%)
  overflow-y auto
  overflow-x hidden

  ul
    text-indent -10px
    list-style none
    margin 0
    padding 0
    font-size 11px
    width 190px
    :nth-child(2)
      margin-top 0.4em

    li
      padding-left 3em
      margin-bottom 0.3em
      overflow hidden
      text-overflow ellipsis
      white-space normal

    .sidebarheader
      padding-left 2em
      padding-bottom 0.5em
      padding-top 0.5em
      font-weight bold

    .sidebarlist
      padding-top 0.7em
      padding-bottom 0.7em
      padding-left 2em
      white-space normal
      a
        color inherit

p
  line-height 1.8

code
  color #666
  font-family Courier,Consolas,monospace
  font-size 103%

div.declaration
  font: 102% Courier,Consolas,monospace
  margin-top: 1.2em
  margin-bottom .9em
  font-size: gtgt

a
  text-decoration none
  color #97BFB2
  font-size 103%

h5
  margin-top 1.5em
  margin-bottom 0.5em
  padding 0
  font-weight bold

span.parameter
  font-style italic

dl.termdef
  dt
    margin-top 0
  dd
    margin-left 1.25em
    margin-top 0.083em
    margin-bottom .5em

a:hover
  text-decoration underline

footer
  text-align center
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
