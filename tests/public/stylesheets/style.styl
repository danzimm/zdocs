@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Quicksand')
global-reset()

sub-color = #C7C7C7
main-color = #50A186
sb-color = #D9DEDB
sb-width = 228px

body
  font-family 'Georgia'

.mainheader
  font-family 'Quicksand'
  padding 0.5em 0.5em
  color #fff
  font-size 1em
  text-align left
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.subheader
  font 215% 'Lucida Grande','Lucida Sans Unicode',Helvetica,Arial,Verdana,sans-serif
  padding 0.4em 0.4em
  background-color sub-color
  border-bottom 1px solid darken(sub-color, 30%)
  text-align center
  font-size 1em
  color #000
 
.container
  margin 30px auto

.main-content
  margin-left sb-width
  padding-left 2.15em
  font 100% 'Lucida Grande','Lucida Sans Unicode',Helvetica,Arial,Verdana,sans-serif

  p
    font-size 80%

  ul
    margin-left 7px
    li
      font-size 80%

  .categorysubheader
    font-size 115%
    margin-bottom 1em
    margin-top 1em

  .categoryheader
    font-size 135%
    color #468C75
    margin-bottom 1em
    margin-top 1em

  #pagetitle
    font-size 200%
    margin-bottom 1em

.sidebar
  position fixed
  font 115% 'Lucida Grande','Lucida Sans Unicode',Helvetica,Arial,Verdana,sans-serif
  left 0
  bottom 0
  top 3.5em
  width sb-width 
  background-color sb-color
  border-right 1px solid darken(sb-color, 30%)

  ul
    list-style none
    margin 0
    padding 0
    font-size 0.6em
    :nth-child(2)
      margin-top 0.4em

    li
      padding-left 3em
      margin-bottom 0.3em

    .sidebarheader
      padding-left 2em
      padding-bottom 0.5em
      padding-top 0.5em
      font-weight bold

    .sidebarlist
      padding-top 0.7em
      padding-bottom 0.7em
      padding-left 2em
      a
        color inherit

    .toc
      border-bottom 1px solid darken(sb-color, 30%)
      padding-top 1em
      padding-bottom 1em
      padding-left 2em

p
  line-height 1.8

code
  color #666
  font-family Courier,Consolas,monospace
  font-size 103%

a
  text-decoration none
  color #97BFB2
  font-size 103%

a:hover
  text-decoration underline

footer
  text-align center
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px